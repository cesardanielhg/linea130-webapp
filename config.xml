    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <icon src="logo.png" density="ldpi" />
        <icon src="logo.png" density="mdpi" />
        <icon src="logo.png" density="hdpi" />
        <icon src="logo.png" density="xhdpi" />
        <icon src="logo.png" density="xxhdpi" />
        <icon src="logo.png" density="xxxhdpi" />

        <splash src="screen.jpg" density="land-hdpi"/>
        <splash src="screen.jpg" density="land-ldpi"/>
        <splash src="screen.jpg" density="land-mdpi"/>
        <splash src="screen.jpg" density="land-xhdpi"/>

        <splash src="screen.jpg" density="port-hdpi"/>
        <splash src="screen.jpg" density="port-ldpi"/>
        <splash src="screen.jpg" density="port-mdpi"/>
        <splash src="screen.jpg" density="port-xhdpi"/>
