<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appherolocal.com" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>LÃ­nea 130</name>
    <description>
        Plataforma de denuncia ciudadana.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
       SCGG
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash src="img/screen.jpg" density="land-hdpi"/>
        <splash src="img/screen.jpg" density="land-ldpi"/>
        <splash src="img/screen.jpg" density="land-mdpi"/>
        <splash src="img/screen.jpg" density="land-xhdpi"/>

        <splash src="img/screen.jpg" density="port-hdpi"/>
        <splash src="img/screen.jpg" density="port-ldpi"/>
        <splash src="img/screen.jpg" density="port-mdpi"/>
        <splash src="img/screen.jpg" density="port-xhdpi"/>
    </platform>
    <platform name="android" />
        <preference name="SplashScreen" value="img/screen.jpg" />
        <preference name="SplashScreenDelay" value="10000" />
        <preference name="ShowSplashScreenSpinner" value="false" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="FadeSplashScreen" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
